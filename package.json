{
  "name": "centraverse",
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/lodash": "^4.14.200",
    "@types/lodash.uniqby": "^4.7.8",
    "@types/pdfmake": "^0.2.8",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.1",
    "eslint-plugin-svelte": "^2.34.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.3",
    "prettier-plugin-jsdoc": "^1.1.1",
    "prettier-plugin-svelte": "^3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "svelte": "^4.2.2",
    "typescript": "^5.2.2"
  },
  "license": "AGPL-3.0-only",
  "packageManager": "yarn@4.0.0-rc.30",
  "private": true,
  "scripts": {
    "build": "test -f .env || cp .env.example .env && cp .env packages/api/ && yarn workspaces foreach --topological-dev -pv run build && yarn format",
    "dev": "test -f .env || cp .env.example .env && cp .env packages/api/ && docker compose up -d && yarn dotenv -- yarn workspaces foreach -piv run dev",
    "format": "prettier . --write --ignore-unknown --plugin prettier-plugin-svelte",
    "lint": "eslint . & stylelint '**/*.{css,scss,svelte}' &",
    "lintfix": "eslint --fix . & stylelint --fix '**/*.{css,scss,svelte}' &",
    "postinstall": "husky install",
    "prisma": "yarn workspace @centraverse/api run prisma",
    "reset": "docker compose up -d && NODE_ENV=development yarn prisma migrate reset --force",
    "start": "docker compose up -d && yarn workspaces foreach -piv run start",
    "migration": "yarn prisma migrate dev --name",
    "triage": "xdg-open 'https://git.inpt.fr/inp-net/churros/-/issues/?sort=created_date&state=opened&not[label_name][]=importance:urgent&not[label_name][]=importance:high&not[label_name][]=importance:medium&not[label_name][]=importance:low&not[label_name][]=importance:rockbottom&not[label_name][]=difficulty:braindead&not[label_name][]=difficulty:easy&not[label_name][]=difficulty:moderate&not[label_name][]=difficulty:hard&not[label_name][]=difficulty:unknown'"
  },
  "volta": {
    "node": "20.6.1",
    "yarn": "1.22.19"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "fuse.js": "^7.0.0",
    "html5-qrcode": "^2.3.8",
    "pdfmake": "^0.2.8",
    "simple-svelte-autocomplete": "^2.5.2"
  }
}
